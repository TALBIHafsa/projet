<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="10dp"
                android:color="@android:color/holo_green_dark" /> <!-- Change to your desired border color -->
            <corners android:radius="8dp" /> <!-- Make sure this matches your card corner radius -->
        </shape>
    </item>
    <!-- Background color (if needed) -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Change to your desired background color -->
            <corners android:radius="8dp" /> <!-- Make sure this matches your card corner radius -->
        </shape>
    </item>
</layer-list>
