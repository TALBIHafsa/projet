<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/green" /> <!-- Change to your desired border color -->
            <corners android:radius="8dp" /> <!-- Make sure this matches your card corner radius -->
        </shape>
    </item>
    <!-- Background color with greenish tint -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGreen" /> <!-- Slightly greenish tint -->
            <corners android:radius="8dp" /> <!-- Make sure this matches your card corner radius -->
        </shape>
    </item>
</layer-list>
